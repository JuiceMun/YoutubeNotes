{
    "manifest_version": 3,
    "name": "Youtube Notes",
    "version": "1.0",
    "description": "Take notes while watching YouTube videos.",
    "action": {
      "default_popup": "index.html"
    },
    "side_panel": {
      "default_path": "side_panel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["sidePanel"],
    "icons": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  }
  